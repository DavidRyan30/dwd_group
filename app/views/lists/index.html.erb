<h1>Listing lists</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Date</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.date %></td>
        <td><%= list.note %></td>
        <td><%= link_to 'Show & Add Items', list %></td>
        <td><%= link_to 'Edit Note', edit_list_path(list) %></td>
        <td><%= link_to 'Delete List', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

